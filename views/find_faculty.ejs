<script>
    document.getElementById("searchCriteria").addEventListener("change", function () {
        var searchCriteria = document.getElementById("searchCriteria").value;
        var label = document.getElementById("searchValueLabel");
        var form = document.getElementById("searchForm");
        var searchInput = document.getElementById("searchText");

        // Update the label text based on the selected search criteria
        switch (searchCriteria) {
            case "student_id":
                label.textContent = "Enter Faculty's Id:";
                form.action = "/search_faculty_by_id"; // Set form action for author search
                searchInput.placeholder = "Enter Faculty's Id";
                break;
            case "student_name":
                label.textContent = "Enter Faculty's Name:";
                form.action = "/search_faculty_by_name"; // Set form action for book search
                searchInput.placeholder = "Enter Faculty's Name";
                break;
            // case "enrol_id":
            //     label.textContent = "Enter Enrolment Number:";
            //     form.action = "/search_student_by_enrol_id"; // Set form action for book search
            //     searchInput.placeholder = "Enter Student's Enrolment number";
            //     break;
            default:
                label.textContent = "Enter Search Value:"; // Default label text
                form.action = ""; // Set default form action
        }

        // Show the label
        label.style.display = "block";
    });
</script>


