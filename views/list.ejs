 <script>
     function backupData() {
         fetch('/backup')
             .then(response => {
                 if (response.ok) {
                     return response.text();
                 }
                 throw new Error('Backup failed!');
             })
             .then(message => {
                 alert(message);
             })
             .catch(error => {
                 console.error('Backup error:', error);
                 alert('An error occurred during backup.');
             });
     }
