<script>
    document.getElementById("searchCriteria").addEventListener("change", function () {
        var searchCriteria = document.getElementById("searchCriteria").value;
        var label = document.getElementById("searchValueLabel");
        var form = document.getElementById("searchForm");
        var searchInput = document.getElementById("searchText");

        // Update the label text based on the selected search criteria
        switch (searchCriteria) {
            case "author":
                label.textContent = "Enter Author's Name:";
                form.action = "/search_author"; // Set form action for author search
                searchInput.placeholder = "Enter Author's Name";
                break;
            case "book":
                label.textContent = "Enter Book's Name:";
                form.action = "/search_book"; // Set form action for book search
                searchInput.placeholder = "Enter Book's Name";
                break;
            case "publication":
                label.textContent = "Enter Publication's Name:";
                form.action = "/search_publication"; // Set form action for book search
                searchInput.placeholder = "Enter Book's Publication";
                break;
            case "serial":
                label.textContent = "Enter Book's Serial Number:";
                form.action = "/search_serial"; // Set form action for serial number search
                searchInput.placeholder = "Enter Book Serial";
                break;
            case "isbn":
                label.textContent = "Enter ISBN Number:";
                form.action = "/search_isbn"; // Set form action for ISBN number search
                searchInput.placeholder = "Enter ISBN";
                break;
            default:
                label.textContent = "Enter Search Value:"; // Default label text
                form.action = ""; // Set default form action
        }

        // Show the label
        label.style.display = "block";
    });
</script>


